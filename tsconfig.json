{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "sourceMap": false,
    "noEmitOnError": true,
    "noEmit": true,
    "alwaysStrict": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "ESNext",
      "DOM.Iterable"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}